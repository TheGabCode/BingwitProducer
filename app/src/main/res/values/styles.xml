<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="BingwitRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#C4C4C4</item>
        <item name="colorControlActivated">#FFD845</item>
    </style>
    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">#747474</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="SequenceLayoutActiveSubTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_700</item>
    </style>
    <style name="SequenceLayoutInactiveSubTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>
    <style name="SequenceLayoutActiveTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SequenceLayoutInactiveTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

</resources>
