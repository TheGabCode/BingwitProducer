<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:context="gab.cdi.bingwitproducer.fragments.UploadImageOptionsDialogFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/upload_from_image_picker_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"

            android:textColor="#000000"
            android:fontFamily="@font/roboto"
            android:text="@string/upload_image_from_phone"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            />
        <TextView
            android:id="@+id/upload_from_camera_capture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:fontFamily="@font/roboto"
            android:text="@string/take_a_picture"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            />
    </LinearLayout>

</RelativeLayout>
