    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp">
   <android.support.v7.widget.CardView
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:cardUseCompatPadding="true"
       app:cardPreventCornerOverlap="true"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <android.support.constraint.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="16dp">
           <TextView
               android:id="@+id/transaction_tracking_number"
               android:layout_width="0dp"
               app:layout_constraintWidth_percent="0.5"
               android:layout_height="wrap_content"
               android:text="s98g4dsfsf"
               android:maxLines="1"
               android:singleLine="true"
               android:scrollHorizontally="true"
               android:fontFamily="@font/roboto_bold"
               android:textSize="16sp"
               android:textColor="@color/gray_700"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>
           <TextView
               android:id="@+id/tracking_no_label"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Tracking no."
               android:textSize="12sp"
               android:textColor="@color/gray_500"
               android:fontFamily="@font/roboto"
               app:layout_constraintTop_toBottomOf="@id/transaction_tracking_number"
               app:layout_constraintStart_toStartOf="parent"/>

           <TextView
               android:id="@+id/transaction_status"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="status"
               android:fontFamily="@font/roboto_bold"
               android:textAllCaps="true"
               android:textColor="@color/gray_500"
               app:layout_constraintTop_toBottomOf="@id/tracking_no_label"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="16dp"/>

           <TextView
               android:id="@+id/transaction_total_amount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="16sp"
               android:fontFamily="@font/roboto_bold"
               android:textColor="@color/gray_700"
               android:text="P1000.00"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"/>

           <TextView
               android:id="@+id/transaction_total_amount_label"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Total Amount"
               android:textColor="@color/gray_500"
               android:textSize="12sp"
               android:fontFamily="@font/roboto"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@id/transaction_total_amount"/>

           <TextView
               android:id="@+id/transaction_last_updated"
               app:layout_constraintTop_toBottomOf="@+id/transaction_status"
               android:layout_width="wrap_content"
               android:layout_height="17dp"
               android:text="Last updated"
               android:textColor="@color/gray_500"
               android:textSize="12sp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               tools:layout_editor_absoluteX="16dp" />
       </android.support.constraint.ConstraintLayout>
