<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:background="@drawable/border_bottom_light_light_gray_white_background">
                <ImageView
                    android:id="@+id/transaction_product_image"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"/>
                <LinearLayout
                    android:id="@+id/transaction_product_details"
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/transaction_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_900"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Crispy Pusit"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/transaction_product_price_per_kilo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#FF5722"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Php 100.00/kg"/>
                    <TextView
                        android:id="@+id/transaction_product_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_700"
                        android:fontFamily="@font/roboto"
                        android:text="Qty: n"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.95"
                            android:text="Subtotal"
                            android:paddingEnd="8dp"
                            android:textAlignment="textEnd"
                            android:fontFamily="@font/roboto"
                            android:textColor="@color/gray_500"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/transaction_product_total_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="P500.00"
                            android:textAlignment="textEnd"
                            android:fontFamily="@font/roboto"
                            android:textColor="@color/gray_700"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/transaction_product_rating_details"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating:"
                    android:layout_marginBottom="4dp"/>
                <RatingBar
                    android:id="@+id/transaction_product_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:progress="3"
                    android:max="5"
                    android:paddingBottom="4dp"/>
                <TextView
                    android:id="@+id/transaction_product_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/gray_500"
                    android:text="Worth the price!"/>
            </LinearLayout>
        </LinearLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/transaction_product_cancelled_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="horizontal"
            android:background="#96eeeeee">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cancelled"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:background="@drawable/white_border_for_textview"
                android:fontFamily="@font/roboto_light"
                android:textSize="20sp"
                android:padding="8dp"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </FrameLayout>


</android.support.v7.widget.CardView>