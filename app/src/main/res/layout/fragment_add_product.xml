<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nav_add_product"
    tools:context="gab.cdi.bingwitproducer.fragments.AddProductFragment">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/add_product_upload_image_option_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#cdcdcd">
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_photo_camera"/>
            </android.support.constraint.ConstraintLayout>
            <LinearLayout
                android:id="@+id/add_product_input_fields_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_product_upload_image_option_container"
                android:orientation="vertical"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="16dp">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/add_product_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    android:layout_marginBottom="16dp">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/add_product_product_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/roboto"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:hint="Product Name"/>
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:id="@+id/add_product_product_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Type"
                        android:textSize="14sp"
                        />
                    <Spinner
                        android:id="@+id/add_product_product_type_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        />
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/add_product_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    android:layout_marginBottom="16dp">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/add_product_product_weight"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/roboto"
                        android:inputType="numberDecimal"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:hint="Weight (Kg)"/>
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:id="@+id/add_product_selling_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selling Method"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"
                        />
                    <RadioGroup
                        android:id="@+id/add_product_selling_method_radiogroup"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="40dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        >
                        <RadioButton
                            android:id="@+id/add_product_selling_method_fixed"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingRight="10dp"
                            android:text="fixed"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/colorPrimaryDark"/>
                        <RadioButton
                            android:id="@+id/add_product_selling_method_auction"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:paddingRight="10dp"
                            android:text="auction"
                            android:textAllCaps="true"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/colorPrimaryDark"/>
                    </RadioGroup>
                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/add_product_price_per_kilogram"
                    android:layout_width="match_parent"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/add_product_price_per_kilogram_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="#000000"
                        android:fontFamily="@font/roboto"
                        android:inputType="numberDecimal"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:hint="@string/price_per_kilogram_pesos"/>
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:id="@+id/add_product_auction_price_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                            android:layout_weight="1">
                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/add_product_auction_min_price"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:hint="@string/min_price_pesos"
                                android:inputType="numberDecimal"
                                android:backgroundTint="@color/colorPrimaryDark"/>
                        </android.support.design.widget.TextInputLayout>
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                            android:layout_weight="1">
                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/add_product_auction_max_price"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:inputType="numberDecimal"
                                android:hint="@string/max_price_pesos"
                                android:backgroundTint="@color/colorPrimaryDark"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                </LinearLayout>
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/add_product_auction_start_date_constraint_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="16dp">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/add_product_auction_start_date_text_input_layout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.85"
                        android:layout_height="wrap_content"
                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/add_product_auction_start_date_text_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:hint="@string/start_date"
                            android:textColor="#000000"
                            android:editable="false"
                            android:focusable="false"
                            android:fontFamily="@font/roboto"/>
                    </android.support.design.widget.TextInputLayout>
                    <ImageView
                        android:id="@+id/start_date_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="8dp"
                        app:srcCompat="@drawable/ic_calendar_start"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/add_product_auction_start_date_text_input_layout"/>
                </android.support.constraint.ConstraintLayout>
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/add_product_auction_end_date_constraint_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="16dp">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/add_product_auction_end_date_text_input_layout"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                        android:layout_width="0dp"
                        app:layout_constraintWidth_percent="0.85"
                        android:layout_height="wrap_content"
                        >
                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/add_product_auction_end_date_text_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/end_date"
                            android:textColorHint="@color/colorPrimaryDark"
                            android:textColor="#000000"
                            android:editable="false"
                            android:focusable="false"
                            android:fontFamily="@font/roboto"/>
                    </android.support.design.widget.TextInputLayout>
                    <ImageView
                        android:id="@+id/end_date_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="8dp"
                        app:srcCompat="@drawable/ic_calendar_end"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/add_product_auction_end_date_text_input_layout"/>
                </android.support.constraint.ConstraintLayout>

                <Button
                    android:id="@+id/add_product_submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="submit"
                    android:textSize="14sp"
                    android:fontFamily="@font/lato"
                    android:textColor="@color/md_white"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
