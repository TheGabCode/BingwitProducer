            <!--app:tsb_thumb_size="24dp"-->
            <!--app:tsb_show_tick_marks_type="oval"-->
            <!--app:tsb_tick_marks_color="@drawable/transaction_status_seekbar_selector"-->
            <!--app:tsb_tick_marks_size="24dp"-->
            <!--app:tsb_show_tick_texts="none"-->
            <!--app:tsb_tick_texts_array="@array/transaction_statuses"-->
            <!--app:tsb_tick_texts_color="#000000"-->
            <!--app:tsb_tick_texts_size="8sp"-->
            <!--app:tsb_track_background_color="#c4c4c4"-->
            <!--app:tsb_track_background_size="4dp"-->
            <!--app:tsb_track_progress_color="@color/colorPrimaryDark"-->
            <!--app:tsb_track_progress_size="4dp"-->
            <!--/>-->
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/transaction_status_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/transaction_status_texts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="Order placed"
            android:textColor="#000000"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="Ready for delivery"
            android:textColor="#000000"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="  Shipped"
            android:textColor="#000000"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"/>
        <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:text="Delivered"
        android:textColor="#000000"
        android:fontFamily="@font/roboto"
        android:textAlignment="textEnd"
            android:gravity="end" />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>