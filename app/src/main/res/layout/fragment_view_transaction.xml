<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:id="@+id/nav_view_transaction"
>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/transaction_product_receipt"
        android:background="#eeeeee "
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/transaction_product_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
           android:src="@drawable/fish"
            />

        <LinearLayout
            android:id="@+id/transaction_product_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.098"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toEndOf="@+id/transaction_product_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:id="@+id/transaction_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Product Name"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/transaction_product_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Product Type "
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/transaction_product_ordered_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="Product Weight Kg"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/transaction_product_price_total_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Price/Kg"
                android:textAllCaps="false"
                android:textColor="#FF5722"
                android:textSize="20sp" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/transaction_recipient_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transaction_product_receipt"
        android:layout_marginTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/border_bottom_light_light_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/transaction_recipient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/assistant"
            android:text="Sold to Joema Nequinto"
            android:textColor="#000000"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/transaction_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/assistant"
            android:text="Order: #09876543210"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/transaction_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/assistant"
            android:text="Order placed on: 4 Oct 2018 8:52"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/transaction_shipping_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/assistant"
            android:textStyle="italic"
            android:text="Shipping Address"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/transaction_status_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/transaction_recipient_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Status"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"/>


            <SeekBar
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:max="3"
                android:min="0"
                android:tickMarkTint="@drawable/transaction_status_seekbar_selector"
                android:thumbTint="@color/colorPrimaryDark"
                android:progressTint="@color/colorPrimaryDark"
                android:thumb="@drawable/transaction_status_seekbar_thumb"

                />
