<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/transaction_consumer_details_skeleton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <LinearLayout
                    android:id="@+id/transaction_tracking_number_layout_skeleton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/transaction_order_number_skeleton"
                        android:layout_width="100dp"
                        android:background="@drawable/skeleton"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/gray_700"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/skeleton"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/gray_500"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/skeleton"
                        android:layout_marginEnd="16dp"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/transaction_recipient_name_skeleton"
                            android:layout_width="150dp"
                            android:background="@drawable/skeleton"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_900"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/transaction_contact_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/gray_600"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:id="@+id/transaction_status_skeleton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="status"
                        android:textAlignment="center"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="#ffffff"
                        android:background="@drawable/rounded_gray_background"/>
                    <TextView
                        android:id="@+id/transaction_last_updated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last updated on"
                        android:textSize="12sp"
                        android:textColor="@color/gray_500"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/skeleton"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/gray_700"/>
                    <TextView
                        android:id="@+id/transaction_shipping_address_skeleton"
                        android:layout_width="200dp"
                        android:background="@drawable/skeleton"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/gray_500"
                        android:textSize="14sp"
                        android:textStyle="italic" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/consumer_additional_notes_layout_skeleton"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Special Instructions:"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/gray_700"/>
                    <TextView
                        android:id="@+id/consumer_additional_notes_skeleton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/gray_500"
                        android:textSize="14sp"
                        android:textStyle="italic" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/transaction_status_step_view_layout_skeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transaction_consumer_details_skeleton">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:background="@drawable/skeleton"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/gray_700"/>
                    <TextView
                        android:id="@+id/transaction_status_logs_see_more_skeleton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:padding="8dp"
                        android:textSize="12sp"
                        android:clickable="true"
                        android:background="?attr/selectableItemBackground"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/gray_700"/>
                </LinearLayout>

                <View
                    android:id="@+id/step_view_skeleton"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/skeleton"/>

                <android.support.v7.widget.RecyclerView
                    android:visibility="gone"
                    android:id="@+id/status_logs_recycler_view_skeleton"
                    android:layout_marginTop="8dp"
                    android:padding="16dp"
                    android:background="#fafafa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/transaction_products_recyclerview_skeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transaction_status_step_view_layout_skeleton">
        </android.support.v7.widget.RecyclerView>
        <android.support.v7.widget.CardView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/transaction_products_recyclerview_skeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/transaction_products_summary_layout_skeleton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_bottom_light_light_gray_white_background"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/transaction_products_recyclerview_skeleton"
                    app:layout_constraintVertical_bias="0.0">
                    <TextView
                        android:layout_width="80dp"
                        android:background="@drawable/skeleton"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/gray_700" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:fontFamily="@font/roboto"
                            android:background="@drawable/skeleton"
                            android:textColor="@color/gray_700"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/transaction_subtotal_skeleton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/skeleton"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/gray_700"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/transaction_summary_result_layout_skeleton"
                    android:background="#ffffff"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/transaction_products_summary_layout_skeleton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp">
                    <LinearLayout
                        android:id="@+id/transaction_total_layout_skeleton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/skeleton"
                            android:layout_weight="0.7"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/gray_900"/>
                        <TextView
                            android:id="@+id/transaction_total_skeleton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/gray_900"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>